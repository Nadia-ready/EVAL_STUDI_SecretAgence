{% extends 'admin/base.html.twig' %}

{% block title %}Agent{% endblock %}

{% block main %}
    <h1>Agent</h1>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agent.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ agent.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ agent.prenom }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ agent.dateNaissance ? agent.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Code_identification</th>
                <td>{{ agent.NomCode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('agent_index') }}" class="btn btn-primary">Retour à la liste</a>

    <a href="{{ path('agent_edit', {'id': agent.id}) }}" class="btn btn-primary">Créer un nouvel agent</a>

    {{ include('agent/_delete_form.html.twig') }}
{% endblock %}
