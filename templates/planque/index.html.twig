{% extends 'base.html.twig' %}

{% block title %}Planque index{% endblock %}

{% block main %}
    <h1>Planque index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Adresse</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planque in planques %}
            <tr>
                <td>{{ planque.id }}</td>
                <td>{{ planque.code }}</td>
                <td>{{ planque.adresse }}</td>
                <td>{{ planque.type }}</td>
                <td>
                    <a href="{{ path('planque_show', {'id': planque.id}) }}">show</a>
                    <a href="{{ path('planque_edit', {'id': planque.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('planque_new') }}">Create new</a>
{% endblock %}
