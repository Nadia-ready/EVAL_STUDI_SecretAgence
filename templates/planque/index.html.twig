{% extends 'admin/base.html.twig' %}

{% block title %}Planque index{% endblock %}

{% block main %}
    <h1>Planque index</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Adresse</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planque in planques %}
            <tr>
                <td>{{ planque.id }}</td>
                <td>{{ planque.nomCode }}</td>
                <td>{{ planque.adresse }}</td>
                <td>{{ planque.type }}</td>
                <td>
                    <a href="{{ path('planque_show', {'id': planque.id}) }}" class="btn btn-primary">Détails</a>
                    <a href="{{ path('planque_edit', {'id': planque.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('planque_new') }}" class="btn btn-primary">Créer une nouvelle planque</a>
    <a href="{{ path('admin_missions_list') }}" class="btn btn-primary">Retour à la liste des missions</a>
{% endblock %}
