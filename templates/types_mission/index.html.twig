{% extends 'admin/base.html.twig' %}

{% block title %}Liste des types de mission{% endblock %}

{% block main %}
    <h1>Liste des types de mission</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for types_mission in types_missions %}
            <tr>
                <td>{{ types_mission.id }}</td>
                <td>{{ types_mission.nom }}</td>
                <td>
                    <a href="{{ path('types_mission_show', {'id': types_mission.id}) }}" class="btn btn-primary">Détails</a>
                    <a href="{{ path('types_mission_edit', {'id': types_mission.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('types_mission_new') }}" class="btn btn-primary">Créer un nouveau type de mission</a>
    <a href="{{ path('admin_missions_list') }}" class="btn btn-primary">Retour à la liste des missions</a>
{% endblock %}
